{
    
    "manifest_version": 2,
    "name": "JotBot",
    "version": "1.0.0",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "browser_action": {
        "default_icon": {
          "16" : "images/icon.png",
          "24" : "images/icon.png",
          "32" : "images/icon.png"
        },
        "default_title": "JotBot - Using Tesseract OCR to copy text from images"
      },
      
    "description": "A Chrome Extension",
    "content-scripts": [
        {
            "js": ["content.js"]
        }
    ],

    "background" : {
        "scripts": [
          "content.js"
        ],
        "persistent": false
      },

      "icons": {
        "16"  : "images/icon.png",
        "48"  : "images/icon.png",
        "128" : "images/icon.png"
      },


    "commands": {
        "take-screenshot": {
          "suggested_key": {
            "default": "Alt+S"
          },
          "description": "Take Screenshot"
        }
      },
    
      "permissions": [
        "storage",
        "activeTab",
        "clipboardWrite",
        "clipboardRead"
      ],
      "content_security_policy":"script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'"


      
}