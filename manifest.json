{
  "name": "JotBot",
  "version": "1.0.0",
  "description": "A text-recognition Chrome Extension",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Take a screen shot!"
  },

  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite",
    "clipboardRead"
  ],
  "manifest_version": 2
}
